<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" styleClass="panel-primary" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.networkmathgame.HelloController">
    <stylesheets>
        <URL value="@bootstrapfx.css" />
    </stylesheets>
    <HBox alignment="CENTER" spacing="150">
        <Label fx:id="scorePlayer1" style="-fx-font-size: 20;" styleClass="label-success, lead" text="Player 1: 0" textFill="#226b0a">
            <HBox.margin>
                <Insets left="10" />
            </HBox.margin>
        </Label>
        <Label fx:id="scorePlayer2" style="-fx-font-size: 20;" styleClass="label-success, lead" text="Player 2: 0" textFill="#d11111">
            <HBox.margin>
                <Insets right="10" />
            </HBox.margin>
        </Label>
    </HBox>
    <Label fx:id="questionLabel" style="-fx-font-size: 34;" styleClass="label-info, lead" text="Question" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="answerButton1" onAction="#handleAnswer" style="-fx-font-size: 16;" styleClass="btn, btn-primary, btn-lg" text="Option 1" />
        <Button fx:id="answerButton2" onAction="#handleAnswer" style="-fx-font-size: 16;" styleClass="btn, btn-primary, btn-lg" text="Option 2" />
        <Button fx:id="answerButton3" onAction="#handleAnswer" style="-fx-font-size: 16;" styleClass="btn, btn-primary, btn-lg" text="Option 3" />
    </HBox>
    <effect>
        <DropShadow height="122.24" radius="57.695" spread="0.49" width="110.54" />
    </effect>
</VBox>
